<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_sign_in"
    android:clipToOutline="true"
    android:background="@drawable/sign_up">

    <LinearLayout
        android:id="@+id/llSignIn"
        android:layout_width="327dp"
        android:layout_height="420dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/rectangel_7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/etSignInEmail"
            android:layout_width="231dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="100dp"
            android:background="@drawable/edit_textbox"
            android:hint="Email"
            android:fontFamily="@font/montserratsemibold"
            android:textColorHint="@color/et_hint"
            android:textColor="@color/black"
            android:paddingLeft="10dp"
            android:textSize="20dp"/>

        <EditText
            android:id="@+id/etSignInPassword"
            android:layout_width="231dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/edit_textbox"
            android:fontFamily="@font/montserratsemibold"
            android:hint="Password"
            android:paddingLeft="10dp"
            android:textColorHint="@color/et_hint"
            android:textColor="@color/black"
            android:inputType="textPassword"
            android:textSize="20dp">

        </EditText>

        <TextView
            android:id="@+id/tvSignInForgotPass"
            android:layout_width="129dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:textSize="13dp"
            android:layout_gravity="left"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="50dp"
            android:text="Forgot password?"
            android:fontFamily="@font/montserratmedium"
            android:textColor="@color/white" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSignInSubmit"
            android:layout_width="231dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textColor="@color/black"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:layout_marginTop="80dp"
            android:background="@drawable/rounded_btnedittext"
            android:fontFamily="@font/montserratsemibold"
            android:text="SUBMIT"
            android:textSize="16dp" />

    </LinearLayout>

    <View
        android:id="@+id/viewSignInEllipse"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/ellipse_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="95dp"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivSignInProfileBg"
        android:layout_width="190dp"
        android:layout_height="160dp"
        android:background="@drawable/profile"
        app:layout_constraintBottom_toBottomOf="@+id/viewSignInEllipse"
        app:layout_constraintEnd_toEndOf="@+id/viewSignInEllipse"
        app:layout_constraintStart_toStartOf="@+id/viewSignInEllipse"
        app:layout_constraintTop_toTopOf="@+id/viewSignInEllipse" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/llSignIn"
        android:orientation="horizontal"
        android:layout_marginBottom="30dp"
        android:id="@+id/llSignInCreate">

        <TextView
            android:id="@+id/tvSignInIfNew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:fontFamily="@font/montserratmedium"
            android:layout_gravity="top"
            android:text="If you are new / "
            android:textColor="@color/white"
            android:textSize="15dp"
            android:layout_weight="0"/>

        <TextView
            android:id="@+id/tvSignInCreateNew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:fontFamily="@font/montserratmedium"
            android:layout_gravity="top"
            android:text="Create New"
            android:textColor="@color/blue"
            android:textSize="15dp"
            android:layout_weight="1"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>