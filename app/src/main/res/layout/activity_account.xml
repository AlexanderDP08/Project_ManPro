<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/account"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:clipToOutline="true"
    android:background="@drawable/main_back">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clAccount"
        android:layout_width="334dp"
        android:layout_height="0dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/white_sheet"
        android:clipToOutline="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/ibAccountBack"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/arrow_left"
            android:backgroundTint="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/viewAccountProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_btnedittext"
            android:fontFamily="@font/montserratsemibolditalic"
            android:gravity="center"
            android:text="PROFILE"
            android:textColor="@color/black"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ibAccountBack" />

        <LinearLayout
            android:id="@+id/ll_account"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewAccountProfile">

            <FrameLayout
                android:id="@+id/flAccountProfile"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_weight="0">

                <ImageView
                    android:id="@+id/ivAccountProfile"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="left"
                    android:background="@drawable/profile_2"
                    android:backgroundTint="@color/black" />

                <TextView
                    android:id="@+id/tvAccountProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="start"
                    android:layout_marginStart="60dp"
                    android:background="@null"
                    android:fontFamily="@font/montserratsemibold"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:textSize="20sp" />
            </FrameLayout>

            <TextView
                android:id="@+id/tvAccountBorder1"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@drawable/border" />

            <FrameLayout
                android:id="@+id/flAccountEmail"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_weight="0">

                <ImageView
                    android:id="@+id/ivAccountEmail"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="left"
                    android:background="@drawable/email"
                    android:backgroundTint="@color/black" />

                <TextView
                    android:id="@+id/tvAccountEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="start"
                    android:layout_marginStart="60dp"
                    android:background="@null"
                    android:fontFamily="@font/montserratsemibold"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:textSize="20sp" />
            </FrameLayout>

            <TextView
                android:id="@+id/tvAccountBorder2"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginTop="0.5dp"
                android:layout_weight="1"
                android:background="@drawable/border" />

            <FrameLayout
                android:id="@+id/flAccountEditProfile"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:layout_weight="6">

                <ImageView
                    android:id="@+id/ivAccountEditProfile"
                    android:layout_width="36dp"
                    android:layout_height="38dp"
                    android:layout_gravity="left"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/edit_profile"
                    android:backgroundTint="@color/light_blue" />

                <TextView
                    android:id="@+id/tvEditProfile"
                    android:layout_width="210dp"
                    android:layout_height="50dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="right"
                    android:background="@null"
                    android:fontFamily="@font/montserratmedium"
                    android:gravity="center"
                    android:text="Edit Profile"
                    android:textColor="@color/black"
                    android:textSize="20dp" />
            </FrameLayout>

            <TextView
                android:id="@+id/tvAccountBorder4"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_weight="7"
                android:background="@drawable/border" />

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btAccountLogout"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/cancel"
            android:drawableLeft="@drawable/logout"
            android:drawablePadding="5dp"
            android:fontFamily="@font/montserratsemibold"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:text="Logout"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ll_account"
            app:layout_constraintVertical_bias="0.07999998" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>