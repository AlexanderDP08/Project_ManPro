<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_sign_up"
    android:clipToOutline="true"
    android:background="@drawable/sign_up">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/viewSignUp"
        android:layout_width="327dp"
        android:layout_height="420dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/rectangel_7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/viewSignUpRectangle"
            android:layout_width="299dp"
            android:layout_height="394dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/rectangel_6"
            app:layout_constraintBottom_toBottomOf="@+id/viewSignUp"
            app:layout_constraintEnd_toEndOf="@+id/viewSignUp"
            app:layout_constraintStart_toStartOf="@+id/viewSignUp"
            app:layout_constraintTop_toTopOf="@+id/viewSignUp">

            <TextView
                android:id="@+id/tvSignUpCreateAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:text="Create Account"
                android:textSize="20sp"
                android:textStyle="bold|italic"
                app:layout_constraintStart_toStartOf="@+id/viewSignUpRectangle"
                app:layout_constraintTop_toTopOf="@+id/viewSignUpRectangle" />

            <EditText
                android:id="@+id/etSignUpName"
                android:layout_width="240dp"
                android:layout_height="45dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/rounded_edittext"
                android:hint="Name"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:paddingLeft="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvSignUpCreateAccount" />

            <EditText
                android:id="@+id/etSignUpEmail"
                android:layout_width="240dp"
                android:layout_height="45dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/rounded_edittext"
                android:hint="Email"
                android:paddingLeft="20sp"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="@+id/etSignUpName"
                app:layout_constraintTop_toBottomOf="@+id/etSignUpName" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilSignUpPassword"
                android:layout_width="240dp"
                android:layout_height="55dp"
                android:layout_marginTop="5dp"
                app:passwordToggleTint="@color/black"
                android:textColorHint="@color/black"
                app:passwordToggleEnabled="true"
                app:layout_constraintStart_toStartOf="@+id/etSignUpEmail"
                app:layout_constraintTop_toBottomOf="@+id/etSignUpEmail">

                <EditText
                    android:id="@+id/etSignUpPassword"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:background="@drawable/rounded_edittext"
                    android:paddingLeft="20dp"
                    android:textColor="@color/black"
                    android:hint="Password" />

            </com.google.android.material.textfield.TextInputLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSignUpRegister"
                android:layout_width="240dp"
                android:layout_height="45dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/rounded_btnedittext"
                android:text="Register"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/tilSignUpPassword" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>