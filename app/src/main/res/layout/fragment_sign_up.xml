<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp"
    android:clipToOutline="true"
    android:background="@drawable/sign_up">

    <!-- TODO: Update blank fragment layout -->

    <View
        android:id="@+id/view"
        android:layout_width="327dp"
        android:layout_height="420dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/rectangel_7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/rectangle_6"
        android:layout_width="299dp"
        android:layout_height="394dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/rectangel_6"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toTopOf="@+id/view" />

    <TextView
        android:id="@+id/create_acco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="Create Account"
        android:textColor="@color/black"
        android:fontFamily="@font/montserratsemibold"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="@+id/rectangle_6"
        app:layout_constraintTop_toTopOf="@+id/rectangle_6" />

    <EditText
        android:id="@+id/editNameSignup"
        android:layout_width="240dp"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_edittext"
        android:fontFamily="@font/montserratsemibold"
        android:hint="Name"
        android:paddingLeft="20sp"
        android:textColorHint="@color/et_hint"
        app:layout_constraintEnd_toEndOf="@+id/rectangle_6"
        app:layout_constraintStart_toStartOf="@+id/rectangle_6"
        app:layout_constraintTop_toBottomOf="@+id/create_acco" />

    <EditText
        android:id="@+id/editEmailSignup"
        android:layout_width="240dp"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_edittext"
        android:fontFamily="@font/montserratsemibold"
        android:hint="Email"
        android:paddingLeft="20sp"
        android:textColorHint="@color/et_hint"
        app:layout_constraintStart_toStartOf="@+id/editNameSignup"
        app:layout_constraintTop_toBottomOf="@+id/editNameSignup" />

    <EditText
        android:id="@+id/editUsernameSignup"
        android:layout_width="240dp"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_edittext"
        android:hint="Username"
        android:paddingLeft="20sp"
        android:fontFamily="@font/montserratsemibold"
        android:textColorHint="@color/et_hint"
        app:layout_constraintStart_toStartOf="@+id/editEmailSignup"
        app:layout_constraintTop_toBottomOf="@+id/editEmailSignup" />

    <EditText
        android:id="@+id/editTextTextPassword"
        android:layout_width="240dp"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_edittext"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="Password"
        android:paddingLeft="20sp"
        android:fontFamily="@font/montserratsemibold"
        android:textColorHint="@color/et_hint"
        app:layout_constraintStart_toStartOf="@+id/editUsernameSignup"
        app:layout_constraintTop_toBottomOf="@+id/editUsernameSignup" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnRegister"
        android:layout_width="240dp"
        android:layout_height="45dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/rounded_btnedittext"
        android:text="Register"
        android:textColor="@color/black"
        android:fontFamily="@font/montserratsemibold"
        app:layout_constraintStart_toStartOf="@+id/editTextTextPassword"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPassword" />


</androidx.constraintlayout.widget.ConstraintLayout>