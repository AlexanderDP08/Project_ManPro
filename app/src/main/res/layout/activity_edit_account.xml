<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/account"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:clipToOutline="true"
    android:background="@drawable/main_back">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clAccount"
        android:layout_width="334dp"
        android:layout_height="0dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/white_sheet"
        android:clipToOutline="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnBacktoProfile"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/arrow_left"
            android:backgroundTint="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/viewEditAccountProfile"
            android:layout_width="260dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_btnedittext"
            android:fontFamily="@font/montserratsemibolditalic"
            android:gravity="center"
            android:text="EDIT PROFILE"
            android:textColor="@color/black"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnBacktoProfile" />

        <LinearLayout
            android:id="@+id/llEditAccount"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewEditAccountProfile">

            <FrameLayout
                android:id="@+id/flEditAccountProfile"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_weight="0">

                <ImageView
                    android:id="@+id/ivEditAccountProfile"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="left"
                    android:background="@drawable/profile_2"
                    android:backgroundTint="@color/black" />

                <EditText
                    android:id="@+id/edUsername"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="60dp"
                    android:ems="10"
                    android:fontFamily="@font/montserratsemibold"
                    android:hint="Username"
                    android:inputType="textPersonName"
                    android:textColor="@color/black"
                    android:textColorHint="@color/et_hint" />

            </FrameLayout>

            <TextView
                android:id="@+id/tvEditAccountBorder1"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@drawable/border" />


        </LinearLayout>

        <FrameLayout
            android:id="@+id/flAccountEditProfile"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginHorizontal="50dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/llEditAccount"
            app:layout_constraintVertical_bias="0.07999998">

            <ImageView
                android:id="@+id/ivEditAccountConfirm"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="left"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/check"
                android:backgroundTint="@color/green" />

            <TextView
                android:id="@+id/tvConfirmER"
                android:layout_width="210dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="right"
                android:background="@null"
                android:fontFamily="@font/montserratmedium"
                android:gravity="center"
                android:text="Confirm"
                android:textColor="@color/black"
                android:textSize="20dp" />
        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>